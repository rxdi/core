{
  "name": "@rxdi/core",
  "version": "0.0.158",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "postpublish": "git push -f ssh://git@gitlab.youvolio.com:522/rxdi/core.git && git push --tags && git push ssh://git@gitlab.youvolio.com:522/rxdi/core.git --tags",
    "start": "gapi start --local --path=./src/testing-app/main.ts",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rxdi/core"
  },
  "author": "Kristiyan Tachev (@Stradivario)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rxdi/core/issues"
  },
  "homepage": "https://github.com/rxdi/core#readme",
  "dependencies": {
    "mkdirp": "^0.5.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.1",
    "systemjs": "^0.21.4"
  },
  "devDependencies": {
    "@types/node": "^10.3.3",
    "@types/jest": "^23.1.4",
    "@types/systemjs": "^0.20.6",
    "typescript": "^2.7.1",
    "jest": "^22.4.2",
    "jest-cli": "^22.4.2",
    "ts-jest": "^22.4.0",
    "tslint": "^5.8.0",
    "tslint-language-service": "^0.9.8"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "rootDir": "./",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/src/.*\\.spec.(ts|tsx|js)$",
    "verbose": true,
    "collectCoverage": false
  }
}
